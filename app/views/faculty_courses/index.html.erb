<p id="notice"><%= notice %></p>

<h1>Faculty Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Faculty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculty_courses.each do |faculty_course| %>
      <tr>
        <td><%= faculty_course.course.name %></td>
        <td><%= faculty_course.faculty.fullname %>, </td>
        <td><%= link_to 'Show', faculty_course %></td>
        <td><%= link_to 'Edit', edit_faculty_course_path(faculty_course) %></td>
        <td><%= link_to 'Destroy', faculty_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default"><%= link_to 'New Faculty Course', new_faculty_course_path %></button>
