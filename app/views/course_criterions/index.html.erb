<p id="notice"><%= notice %></p>

<h1>Course Criterions</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Criterion</th>
      <th>Poor</th>
      <th>Acceptable</th>
      <th>Excellent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_criterions.each do |course_criterion| %>
      <tr>
        <td><%= course_criterion.course.name %></td>
        <td><%= course_criterion.criterion.name_plus_desc %></td>
        <td><%= course_criterion.poor %>%</td>
        <td><%= course_criterion.acceptable %>%</td>
        <td><%= course_criterion.excellent %>%</td>
        <td><%= link_to 'Show', course_criterion %></td>
        <td><%= link_to 'Edit', edit_course_criterion_path(course_criterion) %></td>
        <td><%= link_to 'Destroy', course_criterion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default"><%= link_to 'New Course Criterion', new_course_criterion_path %></button>
